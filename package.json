{
	"name": "rocafoliort_site",
	"version": "0.0.0",
	"private": true,
	"license": "EUPL-1.2",
	"main": "public/server.js",
	"type": "module",
	"scripts": {
		"start": "node ./public/server.js",
		"build": "run-p build:*",
		"serve": "npm run build && run-p \"build:** -- --watch\" watch:*",
		"prepack": "rm -rf package *.tgz && npm run build",
		"postpack": "tar -xzf *.tgz && rm *.tgz",
		"build:sass": "sass public/style.scss public/style.css",
		"build:tsc": "tsc",
		"clean:tsc": "tsc -b --clean",
		"watch:server": "node --inspect --watch ./public/server.js"
	},
	"dependencies": {
		"bootstrap": "5.3.6",
		"compression": "1.8.0",
		"cookie-parser": "1.4.7",
		"cookie-session": "2.1.0",
		"express": "5.1.0",
		"pug": "3.0.3"
	},
	"devDependencies": {
		"@types/compression": "1.7.5",
		"@types/cookie-parser": "1.4.8",
		"@types/cookie-session": "2.0.49",
		"@types/express": "5.0.2",
		"@types/pug": "2.0.10",
		"npm-run-all": "4.1.5",
		"sass": "1.89.0",
		"typescript": "5.8.3"
	},
	"files": [
		"public",
		"views"
	]
}
